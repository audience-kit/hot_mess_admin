- title 'Event Listing'

.panel.panel-default
  .panel-heading
    strong Events

    ul.options.pull-right.list-unstyled.relative
      li: a.btn.btn-primary.btn-xs href=new_event_path
        i.fa.fa-plus
        | Add

  .panel-body.nopadding
    table.table
      thead
        tr
          th Name
      tbody
        - if @events.any?
          - @events.each do |event|
            tr
              td= link_to event.name, event
        - else
          tr colspan="3"
            td No events
