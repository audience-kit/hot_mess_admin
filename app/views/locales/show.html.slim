- title "Locale: #{@locale.name}"

.panel.panel-default
  .panel-heading
    strong Locale
    ul.options.relative.pull-right.list-unstyled
      li: a.btn.white.btn-amber.btn-xs href=edit_locale_path(@locale)
        i.fa.fa-plus
        | Edit
  .panel-body
    .code= @locale.google_location

.panel.panel-default
  .panel-heading
    strong Venues
    ul.options.relative.pull-right.list-unstyled
      li: a.btn.white.btn-primary.btn-xs href=new_locale_venue_path(@locale)
        i.fa.fa-plus
        | Add

  .panel-body.nopadding
    table.table
      thead
        tr
          th Name
          th Event Count
          th Tags
      tbody
        - if @locale.venues.any?
          - @locale.venues.each do |venue|
            tr
              td= link_to venue.name, venue
              td= venue.events.count
              td= venue_tags venue
        - else
          tr
            td colspan="2" No Venues
