- title 'Locale Listing'

.panel.panel-default
  .panel-heading
    strong Locales
    ul.options.pull-right.list-unstyled.relative
      li
        a.btn.btn-xs.white.btn-primary href=new_locale_path
          i.fa.fa-plus
          | New
  .panel-body.nopadding
    table.table
      thead
        tr
          th Name
          th Event Count
          th Visible Venue Count
          th Hidden Venue Count
          th Total Venue Count
      tbody
        - if @locales.any?
          - @locales.each do |locale|
            tr
              td= link_to locale.name, locale
              td= locale.event_count
              td= locale.venue_count
              td= locale.hidden_venue_count
              td= locale.venue_count + locale.hidden_venue_count
        - else
          tr
            td colspan="3" No Locales
